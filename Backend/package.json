{
  "name": "hostel-management-backend",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:auth": "jest --testPathPattern=src/services/auth",
    "test:student": "jest --testPathPattern=src/services/student",
    "test:hostel": "jest --testPathPattern=src/services/hostel",
    "test:allocation": "jest --testPathPattern=src/services/allocation",
    "test:pricing": "jest --testPathPattern=src/services/pricing",
    "test:booking": "jest --testPathPattern=src/services/booking",
    "test:payment": "jest --testPathPattern=src/services/payment",
    "test:notification": "jest --testPathPattern=src/services/notification",
    "test:admin": "jest --testPathPattern=src/services/admin",
    "test:gateway": "jest --testPathPattern=src/services/gateway",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node --transpile-only index.ts",
    "dev:gateway": "nodemon --exec ts-node --transpile-only src/services/gateway/index.ts",
    "dev:auth": "nodemon --exec ts-node --transpile-only src/services/auth/index.ts",
    "dev:student": "nodemon --exec ts-node --transpile-only src/services/student/index.ts",
    "dev:hostel": "nodemon --exec ts-node --transpile-only src/services/hostel/index.ts",
    "dev:allocation": "nodemon --exec ts-node --transpile-only src/services/allocation/index.ts",
    "dev:pricing": "nodemon --exec ts-node --transpile-only src/services/pricing/index.ts",
    "dev:booking": "nodemon --exec ts-node --transpile-only src/services/booking/index.ts",
    "dev:payment": "nodemon --exec ts-node --transpile-only src/services/payment/index.ts",
    "dev:notification": "nodemon --exec ts-node --transpile-only src/services/notification/index.ts",
    "dev:admin": "nodemon --exec ts-node --transpile-only src/services/admin/index.ts",
    "dev:all": "concurrently \"npm run dev:gateway\" \"npm run dev:auth\" \"npm run dev:student\" \"npm run dev:hostel\" \"npm run dev:allocation\" \"npm run dev:pricing\" \"npm run dev:booking\" \"npm run dev:payment\" \"npm run dev:notification\" \"npm run dev:admin\"",
    "start:all": "ts-node index.ts",
    "dev:simple": "ts-node start-simple.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "docker:build": "docker build -t hostel-management .",
    "docker:run": "docker run -p 3000:3000 hostel-management",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f"
  },
  "keywords": [
    "hostel",
    "management",
    "microservices",
    "nodejs",
    "mongodb"
  ],
  "author": "",
  "license": "ISC",
  "description": "Hostel Management Microservices System",
  "dependencies": {
    "@grpc/grpc-js": "^1.13.4",
    "amqplib": "^0.10.3",
    "axios": "^1.6.7",
    "bcryptjs": "^3.0.2",
    "bull": "^4.12.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "firebase-admin": "^13.4.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongoose": "^8.17.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.5",
    "nodemon": "^3.1.10",
    "path-to-regexp": "^8.2.0",
    "razorpay": "^2.9.2",
    "redis": "^4.6.13",
    "reflect-metadata": "^0.1.13",
    "sharp": "^0.33.2",
    "stripe": "^14.14.0",
    "tsyringe": "^4.8.0",
    "twilio": "^4.20.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^4.0.14",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.11",
    "@types/node": "^24.1.0",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.5.0",
    "nodemon": "^3.0.2",
    "redis-memory-server": "^0.12.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
